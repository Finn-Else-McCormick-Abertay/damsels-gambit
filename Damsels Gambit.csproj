<Project Sdk="Godot.NET.Sdk/4.3.0">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <TargetFramework Condition=" '$(GodotTargetPlatform)' == 'android' ">net7.0</TargetFramework>
    <TargetFramework Condition=" '$(GodotTargetPlatform)' == 'ios' ">net8.0</TargetFramework>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <RootNamespace>DamselsGambit</RootNamespace>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="GDBridge" Version="0.13.0" />
    <PackageReference Include="GDBridge.Generator" Version="0.13.0" />
  </ItemGroup>
  <ItemGroup>
    <AdditionalFiles Include="**/*.gd"/>
    <AdditionalFiles Include="**/GDBridgeConfiguration.json"/>
  </ItemGroup>
  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
  </PropertyGroup>
</Project>